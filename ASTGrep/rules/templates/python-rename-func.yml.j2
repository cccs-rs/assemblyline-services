id: python-rename-func-{{TEMPLATE_COUNTER}}
language: Python
rule:
  all:
    - any:
      - inside:
          kind: call
      - inside:
          kind: parenthesized_expression
          inside:
            kind: call
      - all:
          - inside:
              kind: default_parameter
          - nthChild: 2
    - matches: renamed

utils:
  renamed:
    kind: identifier
    pattern: {{FUNC_NAME}}

fix: {{ORIGINAL_NAME}}